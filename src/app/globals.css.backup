@tailwind base;
@tailwind components;
@tailwind utilities;

/* Custom animations and transitions */
@layer base {
  html {
    scroll-behavior: smooth;
    font-size: 16px; /* Base font size for better mobile scaling */
  }
  
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

@layer components {
  /* Mobile-first responsive typography */
  .text-responsive-xl {
    @apply text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl;
  }
  
  .text-responsive-lg {
    @apply text-xl sm:text-2xl md:text-3xl lg:text-4xl;
  }
  
  .text-responsive-md {
    @apply text-lg sm:text-xl md:text-2xl lg:text-3xl;
  }
  
  .text-responsive-sm {
    @apply text-base sm:text-lg md:text-xl;
  }
  
  .text-responsive-xs {
    @apply text-sm sm:text-base md:text-lg;
  }

  /* Mobile-optimized button styles */
  .btn-primary {
    @apply bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 
           text-white font-semibold py-3 px-6 sm:py-4 sm:px-8 
           text-sm sm:text-base md:text-lg
           rounded-lg transition-all duration-300 
           transform hover:scale-105 active:scale-95
           shadow-lg hover:shadow-xl
           focus:outline-none focus:ring-4 focus:ring-blue-300;
  }
  
  .btn-secondary {
    @apply bg-white hover:bg-gray-50 text-blue-600 border-2 border-blue-600
           font-semibold py-2 px-4 sm:py-3 sm:px-6
           text-sm sm:text-base
           rounded-lg transition-all duration-300
           transform hover:scale-105 active:scale-95
           shadow-md hover:shadow-lg
           focus:outline-none focus:ring-4 focus:ring-blue-300;
  }

  /* Fade in up animation for scroll-triggered elements */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease-out;
  }

  .animate-fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  /* Smooth hover transitions for interactive elements */
  .hover-lift {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  /* Custom gradient backgrounds */
  .gradient-bg {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  
  .gradient-bg-alt {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  }

  /* Card hover effects */
  .card-hover {
    @apply transition-all duration-300 transform hover:-translate-y-2 hover:shadow-xl;
  }

  /* Section spacing with mobile-first approach */
  .section-padding {
    @apply py-12 sm:py-16 md:py-20 lg:py-24;
  }
  
  .section-padding-sm {
    @apply py-8 sm:py-12 md:py-16 lg:py-20;
  }

  /* Text animations */
  .text-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .text-gradient-alt {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Mobile-optimized form elements */
  input::placeholder, textarea::placeholder {
    color: #60a5fa; /* blue-400 */
    opacity: 0.7;
    font-style: italic;
    font-weight: 400;
    background: transparent;
    font-size: 0.875rem; /* 14px */
  }
  
  /* Mobile-optimized input fields */
  .form-input {
    @apply w-full px-3 py-2 sm:px-4 sm:py-3
           text-sm sm:text-base
           border border-gray-300 rounded-lg
           focus:ring-2 focus:ring-blue-500 focus:border-blue-500
           transition-all duration-200;
  }
  
  /* Mobile-optimized textarea */
  .form-textarea {
    @apply w-full px-3 py-2 sm:px-4 sm:py-3
           text-sm sm:text-base
           border border-gray-300 rounded-lg
           focus:ring-2 focus:ring-blue-500 focus:border-blue-500
           transition-all duration-200
           resize vertical;
  }
  
  /* Glass morphism effect */
  .glass {
    @apply bg-white/80 backdrop-blur-md border border-white/20;
  }
  
  .glass-dark {
    @apply bg-gray-900/80 backdrop-blur-md border border-gray-700/20;
  }
  
  /* Mobile navigation improvements */
  .mobile-nav-item {
    @apply block w-full text-left px-4 py-3 sm:px-6 sm:py-4
           text-base sm:text-lg font-medium
           text-gray-700 hover:text-blue-600
           transition-all duration-200
           hover:bg-blue-50 rounded-lg
           focus:outline-none focus:ring-2 focus:ring-blue-500;
  }
  
  /* Hero section improvements */
  .hero-content {
    @apply text-center lg:text-left space-y-6 sm:space-y-8;
  }
  
  .hero-title {
    @apply text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl
           font-bold text-gray-900 leading-tight;
  }
  
  .hero-subtitle {
    @apply text-lg sm:text-xl md:text-2xl lg:text-3xl
           text-gray-700 leading-relaxed;
  }
  
  .hero-description {
    @apply text-base sm:text-lg md:text-xl
           text-gray-600 leading-relaxed;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}

/* Loading animation for images */
img {
  transition: opacity 0.3s ease;
}

/* Focus styles for accessibility */
button:focus,
input:focus,
textarea:focus {
  outline: 2px solid #3b82f6;
  outline-offset: 2px;
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .bg-gray-50 {
    background-color: white;
  }

  .text-gray-600 {
    color: black;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }

  html {
    scroll-behavior: auto;
  }
}

/* Dark mode support (if needed in future) */
@media (prefers-color-scheme: dark) {
  /* Dark mode styles can be added here */
}

/* Safer animations with reduced motion support */
.animate-on-scroll {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  will-change: opacity, transform;
}

.animate-fade-in-up {
  opacity: 1;
  transform: translateY(0);
}

/* Ensure animations work on all browsers */
@supports not (transform: translateY(0)) {
  .animate-on-scroll {
    opacity: 0;
  }

  .animate-fade-in-up {
    opacity: 1;
  }
}

/* Prevent layout shift during animations */
.animate-on-scroll * {
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

/* Prevent horizontal overflow and ensure full responsiveness */
html, body {
  max-width: 100vw;
  overflow-x: hidden;
}

svg {
  max-width: 100%;
  height: auto;
  display: block;
}

/* Mobile-specific improvements */
@media (max-width: 640px) {
  .container {
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  /* Smaller text on mobile for better readability */
  h1 {
    font-size: 1.875rem; /* 30px */
    line-height: 2.25rem;
  }
  
  h2 {
    font-size: 1.5rem; /* 24px */
    line-height: 2rem;
  }
  
  h3 {
    font-size: 1.25rem; /* 20px */
    line-height: 1.75rem;
  }
  
  /* Better button sizing on mobile */
  .btn-primary, .btn-secondary {
    padding: 0.75rem 1.5rem;
    font-size: 0.875rem; /* 14px */
  }
  
  /* Improved spacing on mobile */
  .section-padding {
    padding-top: 3rem;
    padding-bottom: 3rem;
  }
  
  /* Better form field sizing on mobile */
  input, textarea, select {
    font-size: 16px; /* Prevents zoom on iOS */
  }
}

/* Tablet improvements */
@media (min-width: 641px) and (max-width: 1024px) {
  .hero-title {
    font-size: 3rem; /* 48px */
    line-height: 1.2;
  }
  
  .hero-subtitle {
    font-size: 1.5rem; /* 24px */
    line-height: 1.5;
  }
}

/* Desktop enhancements */
@media (min-width: 1025px) {
  .hero-title {
    font-size: 4rem; /* 64px */
    line-height: 1.1;
  }
  
  .hero-subtitle {
    font-size: 1.875rem; /* 30px */
    line-height: 1.4;
  }
}
